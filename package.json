{
    "private": true,
    "name": "monorepo",
    "version": "0.0.1",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev:demo": "npx pnpm -r --filter demo run dev",
        "build:demo": "npx pnpm -r --filter demo run build",
        "lint": "npx pnpm -r --filter=\"*\" run lint",
        "rm-dep": "npx rimraf ./node_modules && npx pnpm -r --filter=\"*\" run rm-dep",
        "prettier": "npx prettier **/* --write --ignore-unknown",
        "check-updates": "npx npm-check-updates -ws"
    },
    "devDependencies": {
        "@esbuild-plugins/node-globals-polyfill": "^0.2.3",
        "@esbuild-plugins/node-modules-polyfill": "^0.2.2",
        "@types/node": "^20.11.10",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "@typescript-eslint/parser": "^6.20.0",
        "@vitejs/plugin-react-swc": "^3.5.0",
        "eslint": "^8.56.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-react-hooks": "^4.6.0",
        "eslint-plugin-react-refresh": "^0.4.5",
        "less": "^4.2.0",
        "npm-check-updates": "^16.14.14",
        "prettier": "^3.2.4",
        "rollup-plugin-node-polyfills": "^0.2.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "dependencies": {
        "classnames": "^2.5.1",
        "nanoid": "^5.0.4",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.3"
    }
}
