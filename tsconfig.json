{
    "compilerOptions": {
        "outDir": "./dist",
        "jsx": "react",
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./", // 根路径
        "allowJs": true,
        "paths": {
            // 路径映射，与 baseUrl 关联
            "@/*": ["src/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["./node_modules"]
}
