{
    "compilerOptions": {
        "outDir": "./dist",
        "jsx": "react",
        "target": "esnext",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./", 
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src"],
    "exclude": ["./node_modules"]
}
